<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.lx.history">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".MyApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".activity.BookReadActivity">
        </activity>
        <activity android:name=".activity.PaintingStagingActivity">
        </activity>
        <activity android:name=".activity.PaintingLongActivity">
        </activity>
        <activity android:name=".activity.PaintingAllActivity">
        </activity>
        <activity android:name=".activity.RecordEventActivity">
        </activity>
        <activity android:name=".activity.VideoPlayerActivity">
        </activity>
        <activity android:name=".activity.VideoActivity">
        </activity>
        <activity android:name=".activity.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".activity.MainMiddleActivity"
                android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>