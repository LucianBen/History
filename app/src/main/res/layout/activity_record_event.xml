<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activity.RecordEventActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <include layout="@layout/layout_common_title"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintTop_toTopOf="parent"
                 android:id="@+id/include"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="时间"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="32dp"
                  android:id="@+id/textView"
                  android:layout_marginTop="32dp"
                  app:layout_constraintTop_toBottomOf="@+id/include"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="5dp"
                  android:text="A.D"
                  android:background="@drawable/button_rectangle_rounded_grey"
                  android:id="@+id/editText"
                  app:layout_constraintTop_toTopOf="@+id/textView"
                  app:layout_constraintBottom_toBottomOf="@+id/textView"
                  app:layout_constraintStart_toEndOf="@+id/textView"
                  android:layout_marginStart="32dp"/>

        <EditText android:layout_width="90dp"
                  android:layout_height="wrap_content"
                  android:hint="年"
                  android:padding="5dp"
                  android:background="@drawable/button_rectangle_rounded_grey"
                  android:id="@+id/textView2"
                  app:layout_constraintStart_toEndOf="@+id/editText"
                  android:layout_marginStart="8dp"
                  app:layout_constraintTop_toTopOf="@+id/editText"
                  app:layout_constraintBottom_toBottomOf="@+id/editText"/>

        <TextView android:layout_width="60dp"
                  android:layout_height="wrap_content"
                  android:hint="月"
                  android:padding="5dp"
                  android:background="@drawable/button_rectangle_rounded_grey"
                  android:id="@+id/editText2"
                  android:layout_marginStart="8dp"
                  app:layout_constraintStart_toEndOf="@+id/textView2"
                  app:layout_constraintTop_toTopOf="@+id/textView2"
                  app:layout_constraintBottom_toBottomOf="@+id/textView2"/>

        <TextView android:layout_width="60dp"
                  android:layout_height="wrap_content"
                  android:text="日   "
                  android:padding="5dp"
                  android:background="@drawable/button_rectangle_rounded_grey"
                  android:layout_marginStart="8dp"
                  app:layout_constraintStart_toEndOf="@+id/editText2"
                  app:layout_constraintTop_toTopOf="@+id/editText2"
                  app:layout_constraintBottom_toBottomOf="@+id/editText2"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="事件"
                  android:layout_marginTop="32dp"
                  app:layout_constraintTop_toBottomOf="@+id/textView"
                  app:layout_constraintStart_toStartOf="@+id/textView"
                  android:id="@+id/textView3"/>

        <EditText android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:background="@drawable/button_rectangle_rounded_grey"
                  android:hint="事件"
                  android:padding="5dp"
                  android:maxLines="1"
                  android:maxEms="20"
                  app:layout_constraintTop_toTopOf="@+id/textView3"
                  app:layout_constraintStart_toEndOf="@+id/textView3"
                  android:layout_marginStart="32dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="32dp"
                  app:layout_constraintBottom_toBottomOf="@+id/textView3"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="详情"
                  app:layout_constraintTop_toBottomOf="@+id/textView3"
                  app:layout_constraintStart_toStartOf="@+id/textView3"
                  android:id="@+id/textView4"
                  android:layout_marginTop="32dp"/>

        <EditText android:layout_width="0dp"
                  android:layout_height="150dp"
                  android:maxLines="6"
                  android:ellipsize="end"
                  android:background="@drawable/button_rectangle_rounded_grey"
                  android:hint="详情"
                  android:gravity="start"
                  android:padding="5dp"
                  app:layout_constraintStart_toEndOf="@+id/textView4"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="32dp"
                  app:layout_constraintTop_toTopOf="@+id/textView4"
                  android:id="@+id/editText4"
                  android:layout_marginStart="32dp"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="图片"
                  android:layout_marginTop="32dp"
                  app:layout_constraintTop_toBottomOf="@+id/editText4"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="32dp"
                  android:id="@+id/textView5"/>

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/vector_drawable_add"
                   android:id="@+id/imageView2"
                   app:layout_constraintTop_toTopOf="@+id/textView5"
                   app:layout_constraintBottom_toBottomOf="@+id/textView5"
                   app:layout_constraintStart_toEndOf="@+id/textView5"
                   android:layout_marginStart="32dp"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="类别"
                  android:layout_marginTop="32dp"
                  app:layout_constraintTop_toBottomOf="@+id/imageView2"
                  android:id="@+id/textView6"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="32dp"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="亚洲"
                  android:background="@drawable/button_rectangle_rounded_orange"
                  android:padding="3dp"
                  android:textColor="@color/white"
                  app:layout_constraintTop_toTopOf="@+id/textView6"
                  app:layout_constraintBottom_toBottomOf="@+id/textView6"
                  app:layout_constraintStart_toEndOf="@+id/textView6"
                  android:layout_marginStart="32dp"
                  android:id="@+id/textView7"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="是否公开"
                  app:layout_constraintTop_toBottomOf="@+id/textView6"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginTop="32dp"
                  android:layout_marginStart="32dp"
                  android:id="@+id/textView9"/>

        <Switch android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/textView9"
                app:layout_constraintBottom_toBottomOf="@+id/textView9"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"/>

        <TextView
                android:id="@+id/tvButtonConfirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="确认"
                android:onClick="onPageClick"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/button_rectangle_rounded_orange"
                android:textColor="@color/white"
                android:textSize="@dimen/large_font_size"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="96dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="96dp"
                android:layout_marginTop="96dp"
                app:layout_constraintTop_toBottomOf="@+id/textView9"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>