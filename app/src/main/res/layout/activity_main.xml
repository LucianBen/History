<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:orientation="vertical">

    <com.lx.history.view.CustomViewPager
            android:id="@+id/mainViewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/mainBottonView"/>


    <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
            android:id="@+id/mainBottonView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            app:itemIconTint="@drawable/selector_item_primary_color"
            app:itemTextColor="@drawable/selector_item_primary_color"
            app:menu="@menu/menu_navigation_bottom"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/mainFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:src="@mipmap/main_empty"
            android:tint="@color/grey"
            app:backgroundTint="@android:color/white"
            app:borderWidth="0dp"
            app:elevation="9dp"/>

</RelativeLayout>